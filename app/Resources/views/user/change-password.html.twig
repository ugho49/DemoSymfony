{% extends 'base.html.twig' %}

{% block body %}
    <h1>Change password</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 text-left">
                <a href="{{ path('user_profile') }}" class="btn btn-default">
                    <i class="fa fa-angle-left fa-align-left"></i>
                    Back
                </a>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-primary">
                    <i class="fa fa-floppy-o fa-align-left"></i>
                    Change password
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
