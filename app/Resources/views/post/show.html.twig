{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{% if post.category %}{{ post.category.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ post.user.fullname }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% set canEdit = app.user.id == post.user.id or is_granted('ROLE_ADMIN') %}

    <div class="row">
        <div class="col-md-6 text-left">
            <a href="{{ path('post_index') }}" class="btn btn-default">
                <i class="fa fa-angle-left fa-align-left"></i>
                Back to the list
            </a>

            {% if canEdit %}
                <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-primary">
                    <i class="fa fa-pencil fa-align-left"></i>
                    Edit
                </a>
            {% endif %}
        </div>
        <div class="col-md-6 text-right">
            {% if canEdit %}
                {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit">
                    <i class="fa fa-trash fa-align-left"></i>
                    delete
                </button>
                {{ form_end(delete_form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
