{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{% if post.category %}{{ post.category.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ post.user.fullname }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6 text-left">
            <a href="{{ path('post_index') }}" class="btn btn-default">Back to the list</a>

            <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-primary">Edit</a>
        </div>
        <div class="col-md-6 text-right">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
